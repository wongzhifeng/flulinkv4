# FluLink v4.0 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# PocketBase 配置
PB_ENCRYPTION_KEY=flulink-v4-encryption-key-32chars
PB_ADMIN_EMAIL=admin@flulink.app
PB_ADMIN_PASSWORD=Flulink2025!Admin
PUBLIC_URL=https://pocketbase-final.zeabur.app

# 服务 URL
POCKETBASE_URL=https://pocketbase-final.zeabur.app
AI_SERVICE_URL=https://ai-service-final.zeabur.app

# AI 服务配置
OPENAI_API_KEY=your-openai-api-key
CHROMA_DB_URL=your-chroma-db-url

# 前端配置
NEXT_PUBLIC_POCKETBASE_URL=https://pocketbase-final.zeabur.app
NEXT_PUBLIC_AI_SERVICE_URL=https://ai-service-final.zeabur.app

# 数据库配置
DATABASE_URL=your-database-url

# 安全配置
JWT_SECRET=flulink-v4-jwt-secret-32chars
SESSION_SECRET=flulink-v4-session-secret-32chars