{
  "name": "flulink",
  "version": "1.0.0",
  "description": "基于《德道经》哲学的分布式流感式社交网络",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run src/index.ts",
    "check:philosophy": "bun run scripts/check-philosophy.ts",
    "check:performance": "bun run scripts/check-performance.ts",
    "check:edge": "bun run scripts/check-edge.ts",
    "check:all": "bun run check:philosophy && bun run check:performance && bun run check:edge",
    "test": "bun test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "deploy:zeabur": "zeabur deploy",
    "health": "curl http://localhost:3000/api/health"
  },
  "dependencies": {
    "solid-js": "^1.8.0",
    "@libsql/client": "^0.9.0",
    "drizzle-orm": "^0.29.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "zod": "^3.22.4",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "typescript": "^5.3.0",
    "drizzle-kit": "^0.20.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}