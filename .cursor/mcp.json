{
  "mcpServers": {
    "playwright": {
      "command": "npm",
      "args": ["run", "mcp:playwright"],
      "env": {
        "PLAYWRIGHT_HEADLESS": "true"
      }
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    }
  }
}

